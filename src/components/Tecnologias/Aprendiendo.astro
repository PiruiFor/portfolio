---
import AstroICON from "../icons/AstroICON.astro"
import Typescript from "../icons/Typescript.astro"
import Python from "../icons/Python.astro"
import Wordpress from "../icons/WordPress.astro"
---

<article class="relative rounded-2xl p-6 dark:border  dark:border-dark-900 bg-gradient-to-r dark:from-dark-950 dark:to-black shadow-2xl overflow-hidden false"
style="border:1px solid; border-color: rgb(148, 77, 10);"
>

    <h3 class="text-center mb-8 text-xl font-bold  lg:text-4xl lg:break-words bg-gradient-to-t from-[#e45218] to-[#1e293b] dark:from-[#1e293b] dark:to-[#e45218] bg-clip-text text-transparent">
        Aprendiendo
    </h3>

        <ul class="grid grid-cols-3 gap-4 ">
            <li class="rounded-2xl  group flex flex-col  justify-center items-center">
                <AstroICON/>
                <span class=" text-sm w-full text-center">Astro</span>
            </li>
            <li class="rounded-2xl  group flex flex-col  justify-center items-center">
                <Typescript/>
                <span class=" text-sm w-full text-center">TypeScript</span>
            </li>
            <li class="rounded-2xl  group flex flex-col  justify-center items-center">
                <Python/>
                <span class=" text-sm w-full text-center">Python</span>
            </li>
            <li class="rounded-2xl  group flex flex-col  justify-center items-center">
                <Wordpress/>
                <span class=" text-sm w-full text-center">WordPress</span>
            </li>

        </ul>

</article>